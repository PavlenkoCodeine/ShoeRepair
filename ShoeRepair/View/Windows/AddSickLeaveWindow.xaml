<Window x:Class="ShoeRepair.View.Windows.AddSickLeaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeRepair.View.Windows"
        mc:Ignorable="d"
        Title="Добавить больничный" Height="330" Width="450"
         ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Больничный" Margin="10"
            FontSize="25" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" FontWeight="Bold"/>
        
        <TextBlock Text="Начало:" Grid.Row="2"  Margin="10"/>
        <DatePicker Name="StartDateDp" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Конец:" Grid.Row="4" Margin="10"/>
        <DatePicker Name="EndDateDp" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Причина:" Grid.Row="6"  Margin="10"
                   VerticalAlignment="Top"/>
        <TextBox Name="ReasonTb" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <Button Content="Сохранить" Grid.Row="8" Margin="10"
                Name="SaveBtn"
                Grid.ColumnSpan="2" Click="SaveBtn_Click"/>
    </Grid>
</Window>
