<Page x:Class="ShoeRepair.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoeRepair.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="884" d:DesignWidth="1600"
      Title="ProfilePage">
    <StackPanel Margin="20">
        <TextBlock Text="Профиль администратора" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Имя:"/>
        <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

        <TextBlock Text="Email:"/>
        <TextBox Text="{Binding Email}" Margin="0,0,0,10"/>

        <TextBlock Text="Телефон:"/>
        <TextBox Text="{Binding PhoneNumber}" Margin="0,0,0,10"/>

        <TextBlock Text="Текущий пароль:"/>
        <PasswordBox Margin="0,0,0,10"/>

        <TextBlock Text="Новый пароль:"/>
        <PasswordBox Margin="0,0,0,10"/>

        <TextBlock Text="Подтвердите новый пароль:"/>
        <PasswordBox Margin="0,0,0,20"/>

        <Button Content="Сохранить изменения" Width="200" HorizontalAlignment="Left" Click="Button_Click"/>
    </StackPanel>
</Page>
